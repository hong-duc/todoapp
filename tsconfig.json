{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noEmit": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "$lib": [
                "src/lib"
            ],
            "$lib/*": [
                "src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.svelte"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}